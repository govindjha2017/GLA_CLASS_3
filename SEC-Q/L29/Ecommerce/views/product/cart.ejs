    <ol>
      <%for(let product of cart){%>
          <li style="font-size: large;"><%=  product.productId.name %>   <%=  product.qantity %>*<%=  product.productId.price %>  = <%=  product.qantity * product.productId.price %> </li>
      <%}%>
    </ol>
